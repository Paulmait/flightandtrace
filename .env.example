# FlightTrace Environment Configuration Template
# Copy this file to .env.local for local development
# NEVER commit .env files to version control

# ============================================
# FLIGHT DATA APIS (REQUIRED)
# ============================================

# OpenSky Network - Free tier available
# Register at: https://opensky-network.org/register
OPENSKY_USERNAME=your_opensky_username
OPENSKY_PASSWORD=your_opensky_password

# OpenWeatherMap - For weather overlays
# Get API key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key

# ADS-B Exchange - Additional data source (OPTIONAL)
# Get access at: https://rapidapi.com/adsbx/api/adsbexchange-com1
ADSB_EXCHANGE_API_KEY=your_adsb_exchange_key

# ============================================
# AUTHENTICATION & DATABASE
# ============================================

# Supabase - Database and Auth
# Create project at: https://supabase.com
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Firebase - Alternative Auth (OPTIONAL)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# JWT Secret for API Authentication
JWT_SECRET=generate_a_long_random_string_here
REFRESH_TOKEN_SECRET=another_long_random_string_here

# ============================================
# PAYMENT PROCESSING (REQUIRED FOR PRODUCTION)
# ============================================

# Stripe - Payment processing
# Get keys at: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_BASIC_MONTHLY=price_xxxxx
STRIPE_PRICE_BASIC_YEARLY=price_xxxxx
STRIPE_PRICE_PRO_MONTHLY=price_xxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxxxx

# ============================================
# CACHING & PERFORMANCE
# ============================================

# Redis - For caching (REQUIRED for production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Cache TTL settings (in seconds)
CACHE_TTL_FLIGHTS=30
CACHE_TTL_WEATHER=300
CACHE_TTL_STATIC=3600

# ============================================
# EMAIL & NOTIFICATIONS
# ============================================

# SendGrid - Email service
# Get API key at: https://sendgrid.com
SENDGRID_API_KEY=SG.xxxxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=FlightTrace

# Push Notifications (OPTIONAL)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Sentry - Error tracking
# Get DSN at: https://sentry.io
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_ENVIRONMENT=production

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# LogRocket (OPTIONAL)
LOGROCKET_APP_ID=xxxxx/your-app

# ============================================
# APPLICATION SETTINGS
# ============================================

# Environment
NODE_ENV=development
PORT=3001

# Application URLs
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_APP_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3001

# Production URLs (update for your domain)
# REACT_APP_API_URL=https://api.yourdomain.com
# REACT_APP_APP_URL=https://yourdomain.com
# REACT_APP_WS_URL=wss://api.yourdomain.com

# Feature Flags
REACT_APP_ENABLE_PREMIUM_FEATURES=true
REACT_APP_ENABLE_3D_VIEW=false
REACT_APP_ENABLE_WEATHER_OVERLAY=true
REACT_APP_ENABLE_FLIGHT_ALERTS=true
REACT_APP_ENABLE_WEBSOCKET=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_PREMIUM=500

# CORS Settings
CORS_ORIGIN=http://localhost:3000
# For production, use your actual domain:
# CORS_ORIGIN=https://yourdomain.com

# ============================================
# SECURITY
# ============================================

# Session Configuration
SESSION_SECRET=generate_another_long_random_string
SESSION_MAX_AGE=86400000

# Encryption Keys
ENCRYPTION_KEY=32_character_encryption_key_here

# API Keys for internal services
INTERNAL_API_KEY=generate_secure_api_key_here

# ============================================
# MAP PROVIDERS (Choose one)
# ============================================

# MapTiler (Recommended - better pricing)
REACT_APP_MAPTILER_KEY=your_maptiler_key

# Mapbox (Alternative)
REACT_APP_MAPBOX_TOKEN=pk.xxxxx

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Debug settings (set to false in production)
DEBUG=true
LOG_LEVEL=debug

# Mock data (for testing without API calls)
USE_MOCK_DATA=false
MOCK_USER_LOCATION=false