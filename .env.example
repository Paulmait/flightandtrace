# FlightTrace Environment Variables
# Copy this file to .env.local for development
# Set these in Vercel Dashboard for production

# ============================================
# 1. STRIPE - Payment Processing (CRITICAL)
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_51... # Use pk_live_... for production
STRIPE_SECRET_KEY=sk_test_51...      # Use sk_live_... for production
STRIPE_WEBHOOK_SECRET=whsec_...      # From Stripe webhooks dashboard

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_PREMIUM_MONTHLY=price_...
STRIPE_PRICE_PREMIUM_YEARLY=price_...
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_...
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_...
STRIPE_PRICE_BUSINESS_MONTHLY=price_...
STRIPE_PRICE_BUSINESS_YEARLY=price_...

# ============================================
# 2. OPENSKY NETWORK - Flight Data (CRITICAL)
# ============================================
# No API key needed for anonymous access (100 requests/day)
# For more requests, create account at: https://opensky-network.org/
OPENSKY_USERNAME=              # Optional: for authenticated access
OPENSKY_PASSWORD=              # Optional: for 4000 requests/day

# ============================================
# 3. SENDGRID - Email Service (CRITICAL)
# ============================================
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@flightandtrace.com
SENDGRID_FROM_NAME=FlightTrace

# Templates (create in SendGrid dashboard)
SENDGRID_TEMPLATE_WELCOME=d-...
SENDGRID_TEMPLATE_CANCEL=d-...
SENDGRID_TEMPLATE_TRIAL_ENDING=d-...
SENDGRID_TEMPLATE_PAYMENT_FAILED=d-...

# Alternative: Use Resend.com (simpler)
# RESEND_API_KEY=re_...

# ============================================
# 4. OPENWEATHERMAP - Weather Data (RECOMMENDED)
# ============================================
# Get API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=
# Free tier: 1,000 calls/day

# ============================================
# 5. GOOGLE ANALYTICS - Tracking (RECOMMENDED)
# ============================================
# Get from: https://analytics.google.com/
# Admin > Data Streams > Web > Measurement ID
GA_MEASUREMENT_ID=G-...

# ============================================
# DATABASE - Supabase (Already configured)
# ============================================
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_KEY=eyJ... # Server-side only

# ============================================
# OPTIONAL APIs (Post-Launch)
# ============================================

# ADS-B Exchange (Alternative flight data)
# Contribute data to get free API access
# https://www.adsbexchange.com/data/
ADSBX_API_KEY=

# Aviation Edge (Premium flight data - $29/mo)
# https://aviation-edge.com/
AVIATION_EDGE_KEY=

# FlightAware AeroAPI (Premium - $0.01/query)
# https://flightaware.com/commercial/aeroapi/
FLIGHTAWARE_API_KEY=

# Sentry (Error tracking)
# https://sentry.io/
SENTRY_DSN=

# Redis (Caching - use Upstash for serverless)
# https://upstash.com/
REDIS_URL=redis://default:password@host:port

# Cloudflare (CDN & Protection)
# https://dash.cloudflare.com/
CLOUDFLARE_API_TOKEN=

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://flightandtrace.com/api
NEXT_PUBLIC_APP_URL=https://flightandtrace.com

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_3D_VIEW=false
ENABLE_WEATHER_OVERLAY=true
ENABLE_FLIGHT_ALERTS=true

# Rate Limiting
API_RATE_LIMIT_FREE=100
API_RATE_LIMIT_PREMIUM=1000
API_RATE_LIMIT_PROFESSIONAL=10000
API_RATE_LIMIT_BUSINESS=100000

# Cache Settings (seconds)
CACHE_TTL_FLIGHTS=10
CACHE_TTL_WEATHER=300
CACHE_TTL_AIRPORTS=3600

# ============================================
# VERCEL CONFIGURATION
# ============================================
# These are set automatically by Vercel
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=
# VERCEL_REGION=