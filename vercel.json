{
  "version": 2,
  "framework": null,
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/build",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/test-env",
      "dest": "/api/test_env.js"
    },
    {
      "src": "/api/flights/(.*)",
      "dest": "/api/flights.js"
    },
    {
      "src": "/api/subscription/create-checkout",
      "dest": "/backend/api/subscription/create-checkout.js"
    },
    {
      "src": "/api/subscription/webhook", 
      "dest": "/backend/api/subscription/webhook.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.(svg|ico|png|jpg|jpeg|webp))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/logo.svg",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/svg+xml"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "regions": ["iad1"],
  "github": {
    "enabled": true
  }
}