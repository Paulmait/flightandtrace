{
  "version": 2,
  "buildCommand": "npm run build:all",
  "outputDirectory": "frontend/build",
  "installCommand": "npm install && npm run install:all",
  "functions": {
    "backend/api/*.js": {
      "runtime": "@vercel/node@3"
    },
    "backend/api/**/*.js": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    {
      "source": "/api/fuel/estimate",
      "destination": "/backend/api/fuel/estimate.js"
    },
    {
      "source": "/api/flights/(.*)",
      "destination": "/backend/api/flights.js"
    },
    {
      "source": "/api/flights-live/(.*)",
      "destination": "/backend/api/flights_live.js"
    },
    {
      "source": "/api/subscription/create-checkout",
      "destination": "/backend/api/subscription/create-checkout.js"
    },
    {
      "source": "/api/subscription/webhook",
      "destination": "/backend/api/subscription/webhook.js"
    },
    {
      "source": "/api/email/(.*)",
      "destination": "/backend/api/email_service.js"
    },
    {
      "source": "/api/weather/(.*)",
      "destination": "/backend/api/weather.js"
    },
    {
      "source": "/api/admin/(.*)",
      "destination": "/backend/api/admin.js"
    },
    {
      "source": "/api/health",
      "destination": "/backend/api/health.js"
    },
    {
      "source": "/api/test-env",
      "destination": "/backend/api/test_env.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.(svg|ico|png|jpg|jpeg|webp))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "FUEL_ESTIMATES_ENABLED": "true",
    "API_RATE_LIMIT": "100",
    "NODE_VERSION": "18.x",
    "NODE_ENV": "production"
  }
}